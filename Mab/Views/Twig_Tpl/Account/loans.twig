{% extends "main.twig" %}

{% block stylesheetBase %}
    {{ parent() }}
    <link href="/css/account.css" rel="stylesheet" type="text/css" />
    <link href="/css/loans.css" rel="stylesheet" type="text/css" />
{% endblock %}

{% block scripts %}
    {{ parent() }}
    <script src="/js/account.js"></script>
    <script src="/js/loans.js"></script>
{% endblock %}

{% block h1 %}
    Pecqueur
    <small>Prêts</small>
{% endblock %}

{% block breadcrumb %}
    <li><a href="/"><i class="fa fa-dashboard"></i> Tableau de bord</a></li>
    <li><a href="/account/1234"><i class="ion ion-filing"></i> Vue générale</a></li>
    <li><a href="/account/1234/loans"><i class="fa fa-calculator"></i> Prêts</a></li>
{% endblock %}

{% block menu %}
    {% set vars = {'page': 'loans', 'section': 'account'} %}
    {{ parent() }}
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <div class="box box-danger">
                <div class="box-header">
                    <i class="fa fa-calculator"></i>
                    <a href="/account/1234/loans"><h3 class="box-title" style="cursor:pointer">Prêts</h3></a>
                    <div class="pull-right box-tools">
                        <!-- button with a dropdown -->
                        <div class="btn-group">
                            <button data-toggle="dropdown" class="btn btn-danger btn-sm dropdown-toggle"><i class="fa fa-bars"></i></button>
                            <ul role="menu" class="dropdown-menu pull-right">
                                <li style="text-align: right"><a class="delete_loan" style="padding: 3px 3px 3px 20px">Supprimer ce prêt&nbsp;&nbsp;<i class="fa fa-times fa-fw"></i></a></li>
                                <li style="text-align: right"><a class="change_loan" style="padding: 3px 3px 3px 20px">Modifier la structure du prêt&nbsp;&nbsp;<i class="fa fa-magic fa-fw"></i></a></li>
                            </ul>
                        </div>
                        <button style="display:none;" class="btn btn-success btn-sm" title="valider les modifications"><i class="fa fa-check"></i></button>
                        <button style="display:none;" class="btn btn-warning btn-sm" title="Annuler les modifications"><i class="fa fa-times"></i></button>
                    </div>
                </div><!-- /.box-header -->
                <div class="box-body">
                    <div class="row">
                        <div class="row-fluid col-xs-12 col-sm-6 col-lg-7">
                            <div class="col-xs-12">
                                <div style="padding: 15px;" class="callout calloutinfo bg-aqua editable" data-type="textarea" data-name="description">
                                    <h4 style="text-align: left;">Description</h4>
                                    <p style="text-align: justify;">Bacon ipsum dolor sit amet salami venison chicken flank fatback doner.</p>
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-6">
                                <div class="callout callout-danger bg-red">
                                    <h4>Banque</h4>
                                    <p>SG</p>
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-6">
                                <div class="callout callout-danger bg-red editable" data-type="select" data-name="recurrence">
                                    <h4>Récurrence</h4>
                                    <p>Tous les mois</p>
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-6">
                                <div class="callout callout-danger bg-red editable" data-type="input" data-name="nb_echeance">
                                    <h4>Nombre d'écheances</h4>
                                    <p>72</p>
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-6">
                                <div class="callout callout-danger bg-red editable" data-type="input" data-name="first_echeance">
                                    <h4>1ère écheance</h4>
                                    <p>06-07-2014</p>
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-6">
                                <div class="callout callout-danger bg-red editable" data-type="input" data-name="total">
                                    <h4>Montant total</h4>
                                    <p>15 000 €</p>
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-6">
                                <div class="callout callout-danger bg-red editable" data-type="input" data-name="interet">
                                    <h4>Interêts</h4>
                                    <p>9 000 €</p>
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-6">
                                <div class="callout callout-danger bg-red">
                                    <h4>Reste à payer</h4>
                                    <p>6 000 €</p>
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-6">
                                <div class="callout callout-danger bg-red">
                                    <h4>Remboursé</h4>
                                    <p>9 000 €</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-6 col-lg-5">
                            <div class="table-responsive">
                                <table class="table table-hover dataTable">
                                    <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>N°</th>
                                        <th style="text-align: right;">Mensualité</th>
                                        <th style="text-align: right;">Restant</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    <tr class="info">
                                        <td style="white-space: nowrap;">15-01-2015</td>
                                        <td style="white-space: nowrap;">1</td>
                                        <td style="white-space: nowrap;text-align: right;">650.00 €</td>
                                        <td style="white-space: nowrap;text-align: right;">85 000.00 €</td>
                                    </tr>
                                    <tr class="info">
                                        <td style="white-space: nowrap;">15-02-2015</td>
                                        <td style="white-space: nowrap;">2</td>
                                        <td style="white-space: nowrap;text-align: right;">650.00 €</td>
                                        <td style="white-space: nowrap;text-align: right;">85 000.00 €</td>
                                    </tr>
                                    <tr class="active">
                                        <td style="white-space: nowrap;">15-03-2015</td>
                                        <td style="white-space: nowrap;">3</td>
                                        <td style="white-space: nowrap;text-align: right;">650.00 €</td>
                                        <td style="white-space: nowrap;text-align: right;">85 000.00 €</td>
                                    </tr>
                                    <tr class="editable">
                                        <td style="white-space: nowrap;">15-04-2015</td>
                                        <td style="white-space: nowrap;">4</td>
                                        <td style="white-space: nowrap;text-align: right;">650.00 €</td>
                                        <td style="white-space: nowrap;text-align: right;">85 000.00 €</td>
                                    </tr>
                                    <tr class="editable">
                                        <td style="white-space: nowrap;">15-05-2015</td>
                                        <td style="white-space: nowrap;">5</td>
                                        <td style="white-space: nowrap;text-align: right;">650.00 €</td>
                                        <td style="white-space: nowrap;text-align: right;">85 000.00 €</td>
                                    </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                    </div>

                </div><!-- /.box-body -->
            </div><!-- /.box -->

        </div>
    </div>
{% endblock %}
