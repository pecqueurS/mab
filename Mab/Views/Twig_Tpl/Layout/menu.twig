<aside class="left-side sidebar-offcanvas">
    <!-- sidebar: style can be found in sidebar.less -->
    {% set active = 'active' %}
    <section class="sidebar">
       <ul class="sidebar-menu">
           <li class="{{ vars.page == 'home' ? active }}">
               <a href="/home">
                   <i class="fa fa-dashboard"></i> <span>Tableau de bord</span> <small class="badge pull-right bg-aqua">2</small>
               </a>
           </li>
           <li class="{{ vars.page == 'userShow' ? active }}">
               <a href="/user">
                   <i class="glyphicon glyphicon-user"></i> <span>Profil</span>
               </a>
           </li>
           {% if vars.section == 'account' %}
               <li class="{{ vars.page == 'account' ? active }}">
                   <a href="/account">
                       <i class="ion ion-filing"></i> <span>Vue générale</span>
                   </a>
               </li>
               <li class="{{ vars.page == 'new-transaction' ? active }}">
                   <a href="/new-transaction" style="color:lawngreen">
                       <i class="fa fa-plus"></i> <span>Nouvelle opération</span>
                   </a>
               </li>
               <li class="{{ vars.page == 'waiting-transaction' ? active }}">
                   <a href="/waiting-transaction" style="color:orange">
                       <i class="fa fa-bell"></i> <span>Opérations en attente</span>
                   </a>
               </li>
               <li class="{{ vars.page == 'loan-pending' ? active }}">
                   <a href="/loan-pending" style="color:red">
                       <i class="fa fa-calculator"></i> <span>Prêts en cours</span>
                   </a>
               </li>
               <li class="{{ vars.page == 'debit' ? active }}">
                   <a href="/debit" style="color:deepskyblue">
                       <i class="fa fa-clock-o"></i> <span>Prélèvements auto</span>
                   </a>
               </li>
               <li class="treeview {{ vars.page == 'bank' ? active }}">
                   <a href="#">
                       <i class="fa fa-bank"></i> <span>Mes comptes</span>
                       <i class="fa fa-angle-left pull-right"></i>
                   </a>
                   <ul class="treeview-menu">
                       <li><a style="margin-left: 10px;" href=""><i class="fa fa-angle-double-right"></i> Société Générale</a></li>
                       <li><a style="margin-left: 10px;" href=""><i class="fa fa-angle-double-right"></i> Crédit Agricole</a></li>
                   </ul>
               </li>
               <li class="{{ vars.page == 'check-transaction' ? active }}">
                   <a href="/check-transaction">
                       <i class="fa fa-check-square-o"></i> <span>Pointage banque</span>
                   </a>
               </li>
               <li class="{{ vars.page == 'budget' ? active }}">
                   <a href="/budget">
                       <i class="fa fa-line-chart"></i> <span>Budget</span>
                   </a>
               </li>
           {% endif %}
       </ul>
    </section>
    <!-- /.sidebar -->
</aside>