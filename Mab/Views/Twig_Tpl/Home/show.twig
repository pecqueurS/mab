{% extends "main.twig" %}

{% block stylesheetBase %}
    {{ parent() }}
    <link href="/css/home.css" rel="stylesheet" type="text/css" />
{% endblock %}

{% block scripts %}
    {{ parent() }}
    <script src="/js/home.js"></script>
{% endblock %}

{% block h1 %}
    Tableau de bord
    <small>Gestion des comptes</small>
{% endblock %}

{% block breadcrumb %}
    <li><a href="/"><i class="fa fa-dashboard"></i> Tableau de bord</a></li>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-6 col-xs-12">
            <!-- small box -->
            <div class="small-box bg-aqua">
                <div class="inner">
                    <h3>
                        Pecqueur
                    </h3>
                    <p>
                        Compta perso
                    </p>
                </div>
                <div class="icon">
                    <i class="ion ion-filing"></i>
                </div>
                <a href="account/1234" class="small-box-footer">
                    Entrer <i class="fa fa-arrow-circle-right"></i>
                </a>
            </div>
        </div><!-- ./col -->
        <div class="col-lg-6 col-xs-12">
            <!-- small box -->
            <div class="small-box bg-aqua">
                <div class="inner">
                    <h3>
                        Azur Design Solution
                    </h3>
                    <p>
                        Compta pro
                    </p>
                </div>
                <div class="icon">
                    <i class="ion ion-filing"></i>
                </div>
                <a href="account/1235" class="small-box-footer">
                    Entrer <i class="fa fa-arrow-circle-right"></i>
                </a>
            </div>
        </div><!-- ./col -->
        <div class="col-lg-6 col-xs-12">
            <!-- small box -->
            <div class="small-box bg-green">
                <div class="inner">
                    <h3>
                        Nouveau
                    </h3>
                    <p>
                        Ajouter un compte
                    </p>
                </div>
                <div class="icon">
                    <i class="ion ion-plus-round"></i>
                </div>
                <a class="small-box-footer add-account">
                    Ajouter <i class="fa fa-arrow-circle-down"></i>
                </a>
                <div id="newFormAccount">
                    <form role="form">
                        <div class="box-body">
                            <div class="form-group">
                                <label for="name">Nom</label>
                                <input class="form-control" id="name" placeholder="nom" type="text">
                            </div>
                            <div class="form-group">
                                <label for="description">Description</label>
                                <input class="form-control" id="description" placeholder="description" type="text">
                            </div>

                        </div><!-- /.box-body -->

                        <div class="box-footer">
                            <button type="reset" class="btn btn-danger btn-flat" style="float:left">Annuler</button>
                            <button type="submit" class="btn btn-primary btn-flat" style="float:right">Ajouter</button>
                        </div>
                    </form>
                </div>
            </div>
        </div><!-- ./col -->
    </div>
{% endblock %}
