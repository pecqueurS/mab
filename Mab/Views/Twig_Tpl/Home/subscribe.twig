{% extends "main.twig" %}

	{% block stylesheetBase %}
		{{ parent() }}
		<link rel="stylesheet" href="css/signIn.css">
	{% endblock %}

	{% block header %}{% endblock %}

	{% block menu %}{% endblock %}
			
	{% block content %}
		<div id="logo">
			<img src="/img/logo.png">
		</div>
		<div class="form-box" id="login-box">
			<div class="header">Nouveau Membre</div>
			<form action="../../index.html" method="post">
				<div class="body">
					<div class="form-group">
						<input name="id" class="form-control" placeholder="Identifiant" type="text">
					</div>
					<div class="form-group">
						<input name="email" class="form-control" placeholder="email" type="email">
					</div>
					<div class="form-group">
						<input name="pwd" class="form-control" placeholder="Mot de passe" type="password">
					</div>
					<div class="form-group">
						<input name="pwd2" class="form-control" placeholder="Retaper mot de passe" type="password">
					</div>
				</div>
				<div class="footer">

					<button type="submit" class="btn bg-mauve btn-block">S'enregistrer</button>

					<a href="/sign-in" class="text-center">Je suis deja membre</a>
				</div>
			</form>
		</div>
	{% endblock %}
