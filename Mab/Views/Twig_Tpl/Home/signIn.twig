{% extends "main.twig" %}

{% block stylesheetBase %}
    {{ parent() }}
    <link href="/css/signIn.css" rel="stylesheet" type="text/css" />
{% endblock %}

{% block header %}{% endblock %}

{% block menu %}{% endblock %}


{% block content %}
    <div id="logo">
        <img src="/img/logo.png">
    </div>
    <div class="form-box" id="login-box">
        <div class="header">Se connecter</div>
        <form action="../../index.html" method="post">
            <div class="body">
                <div class="form-group">
                    <input type="text" name="userid" class="form-control" placeholder="Identifiant"/>
                </div>
                <div class="form-group">
                    <input type="password" name="password" class="form-control" placeholder="Mot de passe"/>
                </div>
            </div>
            <div class="footer">
                <button type="submit" class="btn bg-mauve btn-block">Se connecter</button>

                <p><a href="/forgetPwd">J'ai oublié mon mot de passe</a></p>

                <a href="/subscribe" class="text-center">Créer un compte</a>
            </div>
        </form>
    </div>
{% endblock %}
